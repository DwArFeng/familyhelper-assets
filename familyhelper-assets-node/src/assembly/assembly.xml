<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
        xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0
        http://maven.apache.org/xsd/assembly-2.0.0.xsd"
>
    <id>release</id>

    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <fileMode>0755</fileMode>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <outputDirectory>conf/dubbo</outputDirectory>
            <directory>src/main/resources/dubbo</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/database</outputDirectory>
            <directory>src/main/resources/database</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/redis</outputDirectory>
            <directory>src/main/resources/redis</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/familyhelper</outputDirectory>
            <directory>src/main/resources/familyhelper</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/telqos</outputDirectory>
            <directory>src/main/resources/telqos</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <excludes>
                <exclude>banner.txt</exclude>
            </excludes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/ftp</outputDirectory>
            <directory>src/main/resources/ftp</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../README.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../CHANGELOG.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../LICENSE</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>lib</outputDirectory>
            <source>${project.build.directory}/${project.name}-${project.version}.jar</source>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <outputDirectory>bin</outputDirectory>
            <source>src/assembly/familyhelper-start.sh</source>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <outputDirectory>bin</outputDirectory>
            <source>src/assembly/familyhelper-stop.sh</source>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <outputDirectory>bin</outputDirectory>
            <source>src/assembly/familyhelper-start.bat</source>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </file>
    </files>
</assembly>
